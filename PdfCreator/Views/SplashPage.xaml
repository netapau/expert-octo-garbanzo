<Page x:Class="PdfCreator.Views.SplashPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PdfCreator.Views"
      mc:Ignorable="d" 
      d:DesignHeight="170" d:DesignWidth="300"
      Background="#7EAD35"
      Title="SplashPage">
    <Page.Resources>
        <BitmapImage x:Key="ImgLogo" UriSource="/Images/PdfCreator.png"/>
    </Page.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="3*"/>
            <RowDefinition Height="6*"/>
            <RowDefinition Height="1.5*"/>
        </Grid.RowDefinitions>
        <Label Grid.Row="0" Content="Pdf Creator..." Margin="10,-5" VerticalAlignment="Top"
                    Style="{DynamicResource TitreTextStyle}" FontSize="36" Opacity="0.3"/>
        <Image Grid.Row="1" Source="{StaticResource ImgLogo}" Margin="115,6.2,34,5.6" 
                               Width="151" Height="85" 
                               VerticalAlignment="Center" HorizontalAlignment="Center"/>
        <Label Grid.Row="2" Content="Chargement..." Margin="10,0"
               Foreground="White" FontSize="8" Opacity="0.9"
               VerticalAlignment="Top" HorizontalAlignment="Right"/>
    </Grid>
</Page>
